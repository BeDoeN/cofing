{
  "name": "ebusd-configuration",
  "version": "0.1.0",
  "description": "utilities for converting ebusd-configuration files",
  "scripts": {
    "csv2tsp": "tsx ./utils/src/index.ts",
    "csv2tsp-combine": "tsx ./utils/src/index.ts -b latest/de -L de -m outtsp/i18n.yaml -s outtsp -o outtsp.de",
    "maintsp": "find outtsp/ -name '*.tsp'|grep -v 'main.tsp'|sort|grep -v '_inc.'|sed -e 's#outtsp/##' -e 's#^#import \"./#' -e 's#$#\";#' > outtsp/main.tsp",
    "format": "npx tsp format outtsp/*.tsp outtsp/**/*.tsp outtsp.de/*.tsp outtsp.de/**/*.tsp",
    "compile": "npx tsp compile --emit ebus definitions/main.tsp --output-dir outcsv"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/john30/ebusd-configuration.git"
  },
  "keywords": [
    "ebusd",
    "configuration"
  ],
  "author": "John Baier",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/john30/ebusd-configuration/issues"
  },
  "homepage": "https://github.com/john30/ebusd-configuration#readme",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.2",
    "@typespec/library-linter": "latest",
    "js-yaml": "^4.1.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@typespec/compiler": "^0.56.0",
    "csv-parser": "^3.0.0",
    "ebus": "github:john30/ebus-tsplib",
    "tsx": "^4.15.1"
  }
}
